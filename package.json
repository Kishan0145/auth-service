{
   "name": "auth-service",
   "version": "1.0.0",
   "main": "index.js",
   "type": "module",
   "scripts": {
      "dev": "cross-env NODE_ENV=dev nodemon src/server.ts",
      "test": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/.bin/jest",
      "pretty": "prettier src/**/*.ts --write",
      "lint": "eslint src/**/*.ts",
      "lint:fix": "npx eslint src/**/*.ts --fix",
      "prepare": "husky",
      "start": "ts-node src/index.ts",
      "typeorm": "node --loader ts-node/esm ./node_modules/typeorm/cli.js",
      "migration:generate": "npm run typeorm -- migration:generate -d ./src/config/data-source.ts",
      "migration:run": "npm run typeorm -- migration:run -d ./src/config/data-source.ts",
      "migration:revert": "npm run typeorm -- migration:revert -d ./src/config/data-source.ts"
   },
   "repository": {
      "type": "git",
      "url": "git+https://github.com/Kishan0145/auth-service.git"
   },
   "author": "",
   "license": "ISC",
   "bugs": {
      "url": "https://github.com/Kishan0145/auth-service/issues"
   },
   "homepage": "https://github.com/Kishan0145/auth-service#readme",
   "description": "",
   "devDependencies": {
      "@eslint/js": "^9.39.1",
      "@types/bcrypt": "^6.0.0",
      "@types/express": "^5.0.5",
      "@types/jest": "^29.5.14",
      "@types/jsonwebtoken": "^9.0.10",
      "@types/node": "^24.10.1",
      "@types/supertest": "^6.0.3",
      "cross-env": "^10.1.0",
      "eslint": "^9.39.1",
      "globals": "^16.5.0",
      "husky": "^9.1.7",
      "jest": "^29.7.0",
      "jiti": "^2.6.1",
      "lint-staged": "^16.2.7",
      "nodemon": "^3.1.11",
      "prettier": "3.6.2",
      "supertest": "^7.1.4",
      "ts-jest": "^29.4.5",
      "ts-node": "^10.9.2",
      "typescript": "^5.9.3",
      "typescript-eslint": "^8.47.0"
   },
   "lint-staged": {
      "src/**/*.ts": [
         "npm run pretty",
         "npm run lint:fix"
      ]
   },
   "dependencies": {
      "bcrypt": "^6.0.0",
      "dotenv": "^17.2.3",
      "express": "^5.1.0",
      "http-errors": "^2.0.1",
      "jsonwebtoken": "^9.0.3",
      "pg": "^8.14.1",
      "reflect-metadata": "^0.2.2",
      "typeorm": "0.3.27",
      "winston": "^3.18.3",
      "winston-daily-rotate-file": "^5.0.0",
      "zod": "^4.1.13"
   }
}
